<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

   <!-- Main Layout -->

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="horizontal" >
      
      <!-- Layout for push buttons, and fling icons -->

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="15dp"
          android:gravity="center"
          android:orientation="vertical" >

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Layout containing the "Previous", "Play/Pause" and "Next" push buttons -->

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="0dp"
             android:gravity="center"
             android:orientation="horizontal" >

            <Button
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10.0" />

            <Button
                android:id="@+id/play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10.0" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10.0" />
         </LinearLayout>

         <!-- End of layout containing the "Previous", "Play/Pause" and "Next" push buttons -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Layout containing the "Repeat" push button -->

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="0dp"
             android:gravity="center"
             android:orientation="horizontal" >

            <Button
                android:id="@+id/repeat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10.0" />
         </LinearLayout>

         <!-- End of layout containing the "Repeat" push button -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Fake Layout -->

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical" >
         </LinearLayout>

         <!-- End of Fake Layout -->

         <!-- Layout containing the "fling" icons -->

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_margin="5dp"
             android:orientation="horizontal" >

            <!-- Layout containing the "Previous fling" icons -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="horizontal" >

               <ImageView
                   android:id="@+id/fling_previous_left"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_previous_1" />

               <!-- Fake Layout -->

               <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:gravity="center"
                  android:orientation="vertical" >
               </LinearLayout>

               <!-- End of Fake Layout -->

               <ImageView
                   android:id="@+id/fling_previous_middle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_previous_2" />

               <!-- Fake Layout -->

               <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:gravity="center"
                  android:orientation="vertical" >
               </LinearLayout>

               <!-- End of Fake Layout -->

               <ImageView
                   android:id="@+id/fling_previous_right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_previous_1" />
            </LinearLayout>

            <!-- End of layout containing the "Previous fling" icons -->


            <!-- Fake Layout -->

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="4dp"
               android:gravity="center"
               android:orientation="horizontal" >
            </LinearLayout>

            <!-- End of Fake Layout -->

            <!-- Fake Layout -->
            
            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="4dp"
               android:gravity="center"
               android:orientation="vertical" >
            </LinearLayout>

            <!-- End of Fake Layout -->

            <!-- Fake Layout -->

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="4dp"
               android:gravity="center"
               android:orientation="vertical" >
            </LinearLayout>

            <!-- End of Fake Layout -->

            <!-- Layout containing the "Next fling" icons -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="horizontal" >

               <ImageView
                   android:id="@+id/fling_next_left"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_foward_1" />

               <!-- Fake Layout -->

               <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:gravity="center"
                  android:orientation="vertical" >
               </LinearLayout>

               <!-- End of Fake Layout -->

               <ImageView
                   android:id="@+id/fling_next_middle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_foward_2" />

               <!-- Fake Layout -->

               <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:gravity="center"
                  android:orientation="vertical" >
               </LinearLayout>

               <!-- End of Fake Layout -->

               <ImageView
                   android:id="@+id/fling_next_right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_fling_foward_1" />
            </LinearLayout>

            <!-- End of layout containing the "Next fling" icons -->

         </LinearLayout>

         <!-- End of layout containing the "fling" icons -->

      </LinearLayout>

      <!-- End of layout for push buttons, and fling icons -->

      <!-- Fake Layout -->

      <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="37dp"
         android:gravity="center"
         android:orientation="vertical" >
      </LinearLayout>

      <!-- End of Fake Layout -->
      
      <!-- Fake Layout -->

      <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="37dp"
         android:gravity="center"
         android:orientation="vertical" >
      </LinearLayout>

      <!-- End of Fake Layout -->

      <!-- Layout for Meta Data (right side) -->

      <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:gravity="center"
                  android:orientation="vertical" >

         <!-- Layout for track "Now Playing" textView -->

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="3dp"
             android:gravity="center"
             android:orientation="vertical" >

            <TextView
                android:id="@+id/now_playing_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="15.0"
                android:text="@string/now_playing"
                android:textColor="#000000"
                android:typeface="serif"
                android:textSize="30sp" />
         </LinearLayout>

         <!-- End of layout for track "Now Playing" textView -->


         <!-- Layout for track meta-data -->

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="3dp"
             android:gravity="center"
             android:orientation="vertical" >

            <!-- Layout for "Album" -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="vertical" >

               <TextView
                   android:id="@+id/album_label_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/album"
                   android:textColor="#000000"
                   android:textSize="22sp"
                   android:typeface="serif"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/album_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/album"
                   android:textColor="#800000"
                   android:typeface="serif"
                   android:textSize="18sp" />
            </LinearLayout>

            <!-- End of layout for "Album" -->


            <!-- Layout for "Artist" -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="vertical" >

               <TextView
                   android:id="@+id/artist_label_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/artist"
                   android:textColor="#000000"
                   android:textSize="22sp"
                   android:typeface="serif"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/artist_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/artist"
                   android:textColor="#800000"
                   android:typeface="serif"
                   android:textSize="18sp" />
            </LinearLayout>

            <!-- End of layout for "Artist" -->


            <!-- Layout for "Track" -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="vertical" >

               <TextView
                   android:id="@+id/track_label_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/track"
                   android:textColor="#000000"
                   android:textSize="22sp"
                   android:typeface="serif"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/track_textview"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:gravity="center"
                   android:shadowColor="#FFFFFF"
                   android:shadowDx="0"
                   android:shadowDy="0"
                   android:shadowRadius="10.0"
                   android:text="@string/track"
                   android:textColor="#800000"
                   android:typeface="serif"
                   android:textSize="18sp" />
            </LinearLayout>

            <!-- End of layout for "Track" -->

         </LinearLayout>

         <!-- End of layout for track meta-data -->

      </LinearLayout>

      <!-- Layout for Meta Data (right side) -->

   </LinearLayout>

   <!-- End of Main Layout -->

</RelativeLayout>